<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3DD"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de ingredientes disponibles:"
                android:textSize="20sp"
                android:textColor="#4E7266"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <EditText
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_borde_verde"
                android:drawableEnd="@drawable/cruz"
                android:drawablePadding="8dp"
                android:hint="Ingredientes..."
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColorHint="#4E7266" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <ImageView
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_text_borde_redondo"
                android:scaleType="centerInside"
                android:src="@drawable/lupa"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edit_text_borde_redondo2"
                android:padding="8dp"
                android:visibility="visible">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Patatas"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manzana"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ternera"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bacalao"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceite"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Azucar"
                android:layout_margin="8dp"
                android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visto recientemente >"
                android:textSize="20dp"
                android:textColor="#4E7266"
                android:layout_marginTop="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/plato1"
                        android:layout_marginEnd="8dp"
                        android:background="#4E7266"/>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/plato2"
                        android:layout_marginEnd="8dp"
                        android:background="#4E7266"/>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    <FrameLayout
        android:id="@+id/bottom_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="270dp"/>
</LinearLayout>
