<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Nueva Receta"
            android:textSize="24sp"
            android:textColor="@color/verde"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/nombreReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la receta"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/urlImagenReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL de la imagen"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="10dp"
            android:inputType="textUri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/layoutIngredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btnAddIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Ingrediente"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/layoutPasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <Button
            android:id="@+id/btnAddPaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir Paso"
            android:textColor="@color/white"
            android:backgroundTint="@color/verde"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnGuardarReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Receta"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="@color/verde"/>
    </LinearLayout>
</ScrollView>
