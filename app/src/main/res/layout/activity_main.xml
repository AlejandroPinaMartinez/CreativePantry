<!-- activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FAF3DD"
    android:padding="16dp">

    <!-- Logo -->

    <!-- Botón de Iniciar Sesión -->
    <ImageView
        android:layout_width="308dp"
        android:layout_height="308dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/CreativePantry" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicia Sesión"
        android:backgroundTint="#4E7266"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <!-- Botón de Registrarse -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:backgroundTint="#4E7266"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Texto para continuar como invitado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continua como invitado..."
        android:textColor="#4E7266"
        android:layout_gravity="center"/>

    <!-- Separador de texto -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textColor="#4E7266"
        android:layout_marginVertical="16dp"
        android:layout_gravity="center"/>

    <!-- Botones de inicio de sesión social -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar con Google"
            android:backgroundTint="#4285F4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar con Facebook"
            android:backgroundTint="#3B5998"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar con Apple"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
