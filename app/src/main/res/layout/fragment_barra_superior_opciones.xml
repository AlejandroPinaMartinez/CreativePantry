<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#FAF3DD"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="16dp"> <!-- Margen uniforme para todo el layout -->

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/logo"
        android:scaleType="fitCenter"
        android:layout_marginEnd="8dp" /> <!-- Margen entre este y otros elementos -->

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/menu"
        android:scaleType="fitCenter"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp" /> <!-- Margen entre este y otros elementos -->
</LinearLayout>
