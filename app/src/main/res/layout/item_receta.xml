<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_text_borde_redondo"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivRecipeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plato1" />

        <LinearLayout
            android:id="@+id/llRecipeInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tvRecetaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asar"
                android:text="Arroz a la cubana"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvRecetaDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asar"
                android:text="4.8☆   20m"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Aquí empieza la parte modificada -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnReceta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verde"
                android:fontFamily="@font/asar"
                android:text=">"
                android:textColor="#F2E5E5"
                android:textSize="25sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDeleteReceta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verde"
                android:fontFamily="@font/asar"
                android:text="-"
                android:textColor="#F2E5E5"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
